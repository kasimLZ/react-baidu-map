{
  "description": "Baidu Map Components for React.",
  "author": "kenny wong <wowohoo@qq.com>",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "lib:build": "npm run-script build --workspace @uiw/react-baidu-map-polygon",
    "⬇️⬇️⬇️⬇️⬇️ watch ⬇️⬇️⬇️⬇️⬇️": "▼▼▼▼▼ watch::package ▼▼▼▼▼",
    "watch:map": "npm run-script watch --workspace @uiw/react-baidu-map",
    "watch:map-map": "npm run-script watch --workspace @uiw/react-baidu-map-map",
    "watch:api-loader": "npm run-script watch --workspace @uiw/react-baidu-map-api-loader",
    "⬆️⬆️⬆️⬆️⬆️ watch ⬆️⬆️⬆️⬆️⬆️": "▲▲▲▲▲ watch::package ▲▲▲▲▲",
    "version": "npm version patch --workspaces",
    "publish": "npm publish --access public --workspaces",
    "test": "tsbb test --env=jsdom",
    "coverage": "tsbb test --env=jsdom --coverage",
    "build": "npm run-script build --workspaces --if-present",
    "start": "npm run-script start --workspace=website"
  },
  "homepage": "https://uiwjs.github.io/react-baidu-map",
  "repository": {
    "type": "git",
    "url": "https://github.com/uiwjs/react-baidu-map"
  },
  "files": [
    "esm",
    "cjs",
    "lib",
    "src"
  ],
  "keywords": [
    "react-baidu-map",
    "baidu",
    "map",
    "react",
    "react-bmap",
    "baidu-map",
    "bmap",
    "bdmap",
    "百度",
    "地图",
    "百度地图"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,less,md,json}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/*.{ts,tsx}",
      "<rootDir>/packages/**/__tests__/*.{ts,tsx}"
    ]
  },
  "workspaces": [
    "packages/**",
    "website"
  ],
  "devDependencies": {
    "compile-less-cli": "1.8.8",
    "cross-env": "7.0.3",
    "jest-environment-jsdom": "27.2.0",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "prettier": "2.4.1",
    "tsbb": "3.2.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
